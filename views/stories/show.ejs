<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

    <body>
        <section id="showmore">
            <div class="container">
                <h1>
                    <%= story.title %>
                </h1>
                <h2>
                    <%= story.createdAt.toLocaleDateString() %>
                </h2>
                <p>
                    <%= story.description %>
                </p>
                <div class="buttons">
                    <a href="/" class="allstories">Stories</a>
                    <a href="/stories/edit/<%= story.id %>" class="edit">Edit</a>
                    <form action="/stories/<%= story.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="delete">Delete</button>
                    </form>
                </div>
            </div>
        </section>
    </body>

</html>